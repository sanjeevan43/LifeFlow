rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* =========================
       HELPER FUNCTIONS
    ========================== */

    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /* =========================
       USERS COLLECTION
    ========================== */

    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if signedIn() && isOwner(userId);
      
      // Allow creation during signup
      allow create: if signedIn() && isOwner(userId);
    }

    /* =========================
       TASKS COLLECTION
    ========================== */

    match /tasks/{taskId} {
      // Create task with userId field
      allow create: if signedIn() 
        && isOwner(request.resource.data.userId);

      // Read, update, delete own tasks
      allow read, update, delete: if signedIn() 
        && isOwner(resource.data.userId);
    }

    /* =========================
       HABITS COLLECTION
    ========================== */

    match /habits/{habitId} {
      // Create habit with userId field
      allow create: if signedIn() 
        && isOwner(request.resource.data.userId);

      // Read, update, delete own habits
      allow read, update, delete: if signedIn() 
        && isOwner(resource.data.userId);
    }

    /* =========================
       WATER TRACKING COLLECTION
    ========================== */

    match /water/{waterId} {
      // Create water record with userId field
      allow create: if signedIn() 
        && isOwner(request.resource.data.userId);

      // Read, update, delete own water records
      allow read, update, delete: if signedIn() 
        && isOwner(resource.data.userId);
    }

    /* =========================
       FCM TOKENS (if needed)
    ========================== */

    match /userTokens/{tokenId} {
      allow read, write: if signedIn() 
        && isOwner(resource.data.userId);
    }

    /* =========================
       BLOCK EVERYTHING ELSE
    ========================== */

    match /{document=**} {
      allow read, write: if false;
    }
  }
}